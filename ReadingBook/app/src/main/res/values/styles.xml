<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Button"/>

    <style name="Button.MainActivity">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:background">@drawable/bg_rounded_rectangle_button</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:layout_marginBottom">@dimen/main_button_padding_bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Title"/>

    <style name="Title.ChapterName">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="Dialog"/>

    <style name="Dialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/dialog_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_bottom</item>
    </style>

    <style name="Dialog.Message">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:paddingLeft">@dimen/dialog_padding_left</item>
        <item name="android:paddingRight">@dimen/dialog_padding_right</item>
        <item name="android:paddingTop">@dimen/dialog_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_bottom</item>
    </style>

    <style name="Dialog.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Dialog.Button.LeftRightCorner" parent="Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_corner_left_right_button</item>
    </style>

    <style name="Dialog.Button.LeftCorner" parent="Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_corner_left_button</item>
    </style>

    <style name="Dialog.Button.RightCorner" parent="Dialog.Button">
        <item name="android:background">@drawable/bg_dialog_corner_right_button</item>
    </style>

</resources>
